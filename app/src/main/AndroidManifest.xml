<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hackachieve">
    <!-- Giving permission to app access internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InitialCategoryScreen" android:screenOrientation="portrait"></activity>
        <activity android:name=".RegisterShortGoal" android:screenOrientation="portrait"/>
        <activity android:name=".RegisterMainGoal" android:screenOrientation="portrait"/>
        <activity android:name=".MenuPage" android:screenOrientation="portrait"/>
        <activity android:name=".ShortTermCardCompleted" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/slide_in_left" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".ShortTermPageCompleted" android:screenOrientation="portrait" />
        <activity android:name=".LongTermPageCompleted" android:screenOrientation="portrait"/>
        <activity android:name=".ShortTermCard"/>
        <activity android:name=".ShortTermPage" android:screenOrientation="portrait"/>
        <activity android:name=".LongTermCard"/>
        <activity android:name=".LongTermPage" android:screenOrientation="portrait"/>
        <activity android:name=".RegisterPage" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>