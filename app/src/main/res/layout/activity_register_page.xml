<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    tools:context=".RegisterPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/hackachieve_symbol" />

    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="SIGN UP"
        android:textColor="@color/monocolorPallete04"
        android:textSize="20sp"
        app:fontFamily="@font/lato_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/monocolorPallete03"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:text="Name"
            android:textColor="@color/monocolorPallete01"
            android:textSize="16sp"
            app:fontFamily="@font/lato_bold" />

        <EditText
            android:id="@+id/nameFieldRegister"
            android:layout_width="@dimen/Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/border"
            android:ems="7"
            android:hint="Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="3dp"
            android:text="Email"
            android:textColor="@color/monocolorPallete01"
            android:textSize="16sp"
            app:fontFamily="@font/lato_bold" />

        <EditText
            android:id="@+id/emailRegisterField"
            android:layout_width="@dimen/Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/border"
            android:ems="7"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="3dp"
            android:text="Password"
            android:textColor="@color/monocolorPallete01"
            android:textSize="16sp"
            app:fontFamily="@font/lato_bold" />

        <EditText
            android:id="@+id/passwordFieldRegister"
            android:layout_width="@dimen/Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/border"
            android:ems="7"
            android:hint="******"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="@dimen/Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="3dp"
            android:text="Re-type Password"
            android:textColor="@color/monocolorPallete01"
            android:textSize="16sp"
            app:fontFamily="@font/lato_bold" />

        <EditText
            android:id="@+id/passwordConfFieldRegister"
            android:layout_width="@dimen/Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:ems="7"
            android:hint="******"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/registerConfirmButton"
            android:layout_width="@dimen/Button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/secondaryPallete02"
            android:text="Get Started!" />

    </LinearLayout>

</LinearLayout>