<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/monocolorPallete03"
    android:orientation="vertical"
    tools:context=".LongTermPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/monocolorPallete02"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/secondaryPallete04"
            app:srcCompat="@drawable/hackachieve_symbol" />

        <TextView
            android:id="@+id/longTermTitle"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Main Goals"
            android:textSize="24sp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/scrollSize"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/monocolorPallete04">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/monocolorPallete04"
            android:orientation="vertical"
            android:padding="0dp">

            <android.support.v7.widget.CardView
                android:id="@+id/longTermFitnessID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardBackgroundColor="@color/monocolorPallete04"
                app:cardElevation="2dp">

                <include layout="@layout/activity_long_term_card" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardBackgroundColor="@color/monocolorPallete04">

                <include layout="@layout/activity_long_term_card" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/monocolorPallete04">

                <include layout="@layout/activity_long_term_card" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/monocolorPallete04">

                <include layout="@layout/activity_long_term_card" />

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ongoingIcon"
            android:layout_width="18dp"
            android:layout_height="@dimen/SecondaryIcon"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="ongoing"
            app:srcCompat="@drawable/ongoing" />

        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="add"
            app:srcCompat="@drawable/addicon" />

        <ImageView
            android:id="@+id/completedIcon"
            android:layout_width="11dp"
            android:layout_height="@dimen/SecondaryIcon"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="completed"
            app:srcCompat="@drawable/completed" />
    </LinearLayout>
</LinearLayout>