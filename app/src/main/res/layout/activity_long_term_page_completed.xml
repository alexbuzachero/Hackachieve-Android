<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/monocolorPallete03"
    android:orientation="vertical"
    tools:context=".LongTermPageCompleted">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">

    </include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientecolor2"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ongoingIcon"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="ongoing"
                android:paddingTop="8dp"
                app:srcCompat="@drawable/current_goal" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CURRENT GOALS"
                android:textColor="@color/GrayTExt"
                android:textSize="9sp"
                app:fontFamily="@font/lato_bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:contentDescription="add"
            app:srcCompat="@drawable/add_goal" />

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/completedIcon"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="ongoing"
                android:paddingTop="8dp"
                app:srcCompat="@drawable/completed_goal_active" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="COMPLETED GOALS"
                android:textColor="@color/mainPallete01"
                android:textSize="9sp"
                app:fontFamily="@font/lato_bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>